<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#f2f2f2" android:padding="16dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/itemLayout" android:background="@drawable/list_item_background" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textColor="#000000" android:id="@+id/grupo_muscular" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="Ingresa el grupo muscular" android:ems="10"/>
        <EditText android:textColor="#000000" android:id="@+id/rm" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="Ingresa en KG tu RM" android:ems="10" android:inputType="numberDecimal"/>
        <Button android:textColor="#ffffff" android:id="@+id/btnInsertar" android:background="#4caf50" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Guardar" android:onClick="Alta"/>
        <Button android:textColor="#ffffff" android:id="@+id/btnBorrar" android:background="#f44336" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Borrar" android:onClick="borrarRegistro"/>
        <Button android:textColor="#ffffff" android:id="@+id/actualizar" android:background="#0000ff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Actualizar RM seleccionado" android:onClick="Actualizar"/>
        <ListView android:id="@+id/listView" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    </LinearLayout>
</RelativeLayout>